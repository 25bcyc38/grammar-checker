    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Grammar Fixer</title>
    
    <style>
        body { font-family: sans-serif; background: #f0f2f5; padding: 40px; text-align: center; }
        .box { background: white; padding: 25px; border-radius: 10px; max-width: 500px; margin: auto; shadow: 0 4px 6px rgba(0,0,0,0.1); }
        textarea { width: 100%; height: 120px; margin-top: 10px; border: 1px solid #ccc; border-radius: 5px; padding: 10px; box-sizing: border-box; }
        button { background: #28a745; color: white; border: none; padding: 10px 20px; margin-top: 15px; cursor: pointer; border-radius: 5px; font-weight: bold; }
        button:hover { background: #218838; }
        #results { margin-top: 20px; text-align: left; background: #fff3cd; padding: 10px; border-radius: 5px; display: none; border-left: 5px solid #ffc107; }
    </style>
</head>
<body>

    <div class="box">
        <h2>Grammar Checker</h2>
        <p>Enter text to find errors:</p>
        
        <textarea id="textInput" placeholder="i has a apple..."></textarea>
        <br>
        <button onclick="checkGrammar()">Check Mistakes</button>

        <div id="results">
            <strong>Suggestions:</strong>
            <div id="feedback"></div>
        </div>
    </div>

    <script>
        async function checkGrammar() {
            const text = document.getElementById('textInput').value;
            const feedback = document.getElementById('feedback');
            const resultBox = document.getElementById('results');

            if (!text) return alert("Write something first!");

            // Connecting to the LanguageTool Back-end
            const response = await fetch('https://api.languagetool.org/v2/check', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `text=${encodeURIComponent(text)}&language=en-US`
            });

            const data = await response.json();
            feedback.innerHTML = ""; // Clear old results
            resultBox.style.display = "block";

            if (data.matches.length === 0) {
                feedback.innerHTML = "‚ú® No mistakes found!";
            } else {
                data.matches.forEach(error => {
                    feedback.innerHTML += `
                        <p style="border-bottom: 1px dashed #ccc; padding: 5px 0;">
                            ‚ùå <b>Error:</b> "${text.substring(error.offset, error.offset + error.length)}"<br>
                            üí° <b>Try:</b> <span style="color:green">${error.replacements[0]?.value || "Check spelling"}</span>
                        </p>`;
                });
            }
        }
    </script>

</body>
</html>
